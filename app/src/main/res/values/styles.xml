<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimaryDark">#A19100</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="buttonPlay" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/yellow</item>
        <item name="cornerRadius">10dp</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">@color/yellow</item>
    </style>

    <style name="card">
        <item name="android:background">@drawable/card_back</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:src">@drawable/starwars_logo</item>
    </style>

</resources>