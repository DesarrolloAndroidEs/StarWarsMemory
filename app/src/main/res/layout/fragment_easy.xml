            android:id="@+id/card8"
            android:tag="8"
            style="@style/card" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/card9"
            android:tag="9"
            style="@style/card" />
        <ImageView
            android:id="@+id/card10"
            android:tag="10"
            style="@style/card" />
        <ImageView
            android:id="@+id/card11"
            android:tag="11"
            style="@style/card" />
        <ImageView
            android:id="@+id/card12"
            android:tag="12"
            style="@style/card" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/card13"
            android:tag="13"
            style="@style/card" />
